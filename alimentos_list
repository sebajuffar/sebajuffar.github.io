    <style>
        body { font-family: sans-serif; background: #f4f4f9; padding: 20px; }
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; }
        .card { background: white; border-radius: 8px; padding: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        .card img { width: 100%; hieght: 150px; object-fit: cover; border-radius: 4px; }
        .card h3 { margin: 10px 0; color: #333; }
        .stats { font-size: 0.9em; color: #666; }
        .badge { background: #e1ffdc; color: #2e7d32; padding: 2px 6px; border-radius: 4px; font-weight: bold; }
    </style>
